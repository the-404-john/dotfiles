# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5
    markup = "pango"
}

order += "wireless _first_"
order += "battery 0"
order += "cpu_temperature 0"
order += "memory"
order += "volume master"
order += "tztime time"
order += "tztime date"

wireless _first_ {
    format_up = " %quality %essid %ip"
    format_down = ""
    color_good = "#a6e3a1"
    color_bad = "#f38ba8"
    color_degraded = "#f9e2af"
}

battery 0 {
    format = "%status %percentage"
    format_down = ""
    low_threshold = 25
    threshold_type = percentage
    hide_seconds = true
    status_chr = " "
    status_bat = " "
    status_unk = " "
    status_full = " "
    status_idle = ""
    color_bad = "#f38ba8"
}

cpu_temperature 0 {
    format = " %degrees °C"
}

memory {
    format = " %used used  %available free"
    threshold_degraded = "1G"
    format_degraded = "MEMORY < %available"
}

volume master {
    format = " %volume "
    format_muted = "<span foreground='#f9e2af' font_weight='bold'> </span>"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime time {
    format = "<span foreground='#f9e2af' font_weight='bold'> %H:%M:%S</span>"
}

tztime date {
    format = "  %a %d.%m"
}
